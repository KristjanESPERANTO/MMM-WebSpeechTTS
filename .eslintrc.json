{
  "env": {
    "browser": true,
    "es2023": true,
    "node": true
  },
  "globals": {
    "config": "readonly",
    "Log": "readonly",
    "Module": "readonly",
    "getGreetingString": "readonly",
    "getTimeAnnouncementString": "readonly",
    "speak": "readonly"
  },
  "extends": [
    "airbnb-base",
    "plugin:jsonc/recommended-with-json",
    "plugin:unicorn/recommended",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["prettier"],
  "root": true,
  "rules": {
    "default-case": "off",
    "prefer-destructuring": "off",
    "prettier/prettier": "error",
    "import/no-dynamic-require": "off",
    "import/no-unresolved": "off",
    "unicorn/filename-case": "off",
    "unicorn/prefer-query-selector": "off"
  }
}
